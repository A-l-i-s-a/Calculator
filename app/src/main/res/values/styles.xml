<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <style name="button" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/roundedbutton</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">85dp</item>
    </style>

    <style name="orangeButton" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/orange</item>
    </style>

    <style name="lightButton" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

</resources>